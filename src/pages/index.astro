---
import Header from "../components/Header.astro";
import News from "../components/News.astro";
import Dates from "../components/Dates.astro";
import Releases from "../components/Releases.astro";
import Footer from "../components/Footer.astro"
import NewAlbum from "../components/NewAlbum.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/src/css/style.css" />
    <title>Astro</title>
  </head>
  <body>
    <header>
      <Header />
    </header>
    <main class="grid grid-cols-1 md:grid-cols-[1fr,66%] ">
      <section class="new-album md:col-start-2 md:row-start-1 md:row-span-2">
        <NewAlbum/>
      <!-- <Releases/> -->
      </section>
      <section class="dates">
        <Dates />
      </section>
      <section class="news md:row-span-3 col-start-1">
        <News />
      </section>
	  
    </main>
    <footer>
      <Footer/>
    </footer>
  </body>
</html>
