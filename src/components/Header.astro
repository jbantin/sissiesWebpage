---
import logo from "../assets/img/logo.jpg";
import "../css/fonts.css";
---

<div
  class="py-2 z-50 fixed left-0 right-0 top-0 h-28 bg-black flex justify-between px-4"
>
  <a href="/"><img src={logo.src} alt="sissies logo" class="h-full" /></a>
  <ul
    class="mr-12 text-lg hidden text-white md:flex justify-around gap-3 items-center font-black font-['bebas'] tracking-wider"
  >
    <li><a href="#dates">Dates</a></li>
    <li><a href="/gal">Gallery</a></li>
    <li><a href="#media">Media</a></li>
    <li><a href="/releases">Releases</a></li>
    <li><a href="/contact">Contact</a></li>
  </ul>
  <label class="md:hidden flex flex-col justify-center items-center relative">
    <input class="peer hidden burger-check" type="checkbox" />
    <svg class="hamburger" fill="none" viewBox="0 0 100 100" width="32">
      <path
        class="line"
        stroke="white"
        stroke-width="10"
        d="M 15 20 H 85 A 1 1 0 0 0 85 50 h -70 A 1 2 0 0 0 15 80 h 70 A 3 -2 0 0 0 50 50 A 14 9 0 0 0 30 95 H 85 a 4 5 0 0 0 0 -15 L 15 20 A 3 1 0 0 1 85 20 L 15 80"
      >
      </path>
      <div
        class="nav transition-all duration-[1.5s] ease-in-out w-40 h-[70vh] bg-black flex flex-col justify-around absolute top-20 right-[-12rem] text-white peer-checked:-right-4"
      >
        <a href="#news">News</a>
        <a href="#dates">Dates</a>
        <a href="/gal">Gallery</a>
        <a href="#media">Media</a>
        <a href="/releases">Releases</a>
        <a href="/contact">Contact</a>
      </div>
    </svg>
  </label>
  <style>
    .nav {
      padding: 0.5rem;
      text-align: right;
      background-color: rgba(0, 00, 00, 0.8);
    }
    .nav a {
      padding: 7%;
      font-family:
        bebas,
        system-ui,
        -apple-system,
        BlinkMacSystemFont,
        "Segoe UI",
        Roboto,
        Oxygen,
        Ubuntu,
        Cantarell,
        "Open Sans",
        "Helvetica Neue",
        sans-serif;

      letter-spacing: 0.05rem;
      font-size: 1.1rem;
      font-weight: 600;
      border-bottom: 1px solid white;
    }
    .nav a:hover {
      font-weight: 900;
      color: black;
      background: white;
      opacity: 1;
    }
    .hamburger .line {
      transition: 1.5s;
      stroke-dasharray: 70, 47, 70, 36, 69, 600;
    }
    .burger-check:checked + .hamburger .line {
      stroke-dasharray: 76, 96, 76, 1000;
      stroke-dashoffset: -540;
    }
  </style>
</div>
